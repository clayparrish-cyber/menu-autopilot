generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      AuthAccount[]
  sessions      Session[]

  // App relations - owned account
  ownedAccount  Account?  @relation("AccountOwner")

  // Member of account
  accountId     String?
  memberOf      Account?  @relation("AccountMembers", fields: [accountId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model AuthAccount {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Business models
model Account {
  id                    String    @id @default(cuid())
  name                  String

  // Stripe
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionTier      SubscriptionTier @default(NONE)

  // Settings
  targetFoodCostPct     Float     @default(30)
  minQtyThreshold       Int       @default(10)
  popularityThreshold   Int       @default(60)
  marginThreshold       Int       @default(60)
  allowPremiumPricing   Boolean   @default(false)

  // Email schedule settings
  emailScheduleEnabled  Boolean   @default(true)
  emailScheduleDay      Int       @default(1)  // 1=Monday, 7=Sunday
  emailScheduleHour     Int       @default(14) // 24h format, 14=2pm

  // Column mappings (JSON)
  columnMappings        Json?

  owner                 User?     @relation("AccountOwner", fields: [ownerId], references: [id])
  ownerId               String?   @unique
  members               User[]    @relation("AccountMembers")
  locations             Location[]

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

enum SubscriptionTier {
  NONE
  SOLO
  TEAM
  GROUP
}

enum Channel {
  BAR_KITCHEN
  FULL_SERVICE
  FAST_CASUAL
  CAFE
  BREWERY
  OTHER
}

model Location {
  id                    String    @id @default(cuid())
  name                  String
  address               String?
  channel               Channel   @default(BAR_KITCHEN)

  // Channel-derived settings (can be customized per location)
  targetFoodCostPct     Float     @default(30)
  popularityThresholdPct Float    @default(60)
  marginThresholdPct    Float     @default(60)
  confidenceQtyHigh     Int       @default(20)
  confidenceQtyMedium   Int       @default(10)
  priceIncreaseMaxPct   Float     @default(0.08)
  priceIncreaseMaxAbs   Float     @default(2.00)
  allowPremiumCross85th Boolean   @default(false)

  account     Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId   String

  items       Item[]
  uploads     Upload[]
  weeks       Week[]
  snapshots   WeekSnapshot[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Upload {
  id            String      @id @default(cuid())
  filename      String
  fileType      UploadType
  rowCount      Int
  status        UploadStatus @default(PENDING)
  errorMessage  String?

  // Column mapping used for this upload
  columnMapping Json?

  location      Location    @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId    String

  week          Week?       @relation(fields: [weekId], references: [id])
  weekId        String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum UploadType {
  PERFORMANCE
  COSTS
  MARGINEDGE_MENU_ANALYSIS
}

enum UploadStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Week {
  id          String    @id @default(cuid())
  weekStart   DateTime
  weekEnd     DateTime

  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId  String

  uploads     Upload[]
  metrics     ItemWeekMetric[]
  report      Report?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([locationId, weekStart, weekEnd])
}

model Item {
  id          String    @id @default(cuid())
  name        String
  category    String?
  isAnchor    Boolean   @default(false)

  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId  String

  costOverrides CostOverride[]
  weekMetrics   ItemWeekMetric[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([locationId, name])
}

enum CostSource {
  MANUAL
  MARGINEDGE
  ESTIMATE
}

model CostOverride {
  id                String      @id @default(cuid())
  unitFoodCost      Float       // Total unit cost (base + modifiers) - PRIMARY
  unitCostBase      Float?      // Base recipe cost (avg_cost_base from ME)
  unitCostModifiers Float?      // Modifier cost per unit (modifier_cost / items_sold)
  source            CostSource  @default(MANUAL)
  effectiveDate     DateTime    @default(now())

  item              Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId            String

  // Full ME data for audit/debugging
  meItemsSold       Int?        // items_sold from ME (for mismatch detection)
  meRevenue         Float?      // total_revenue from ME
  meTotalCost       Float?      // total_cost from ME (if available)
  meTheoreticalPct  Float?      // theoretical_cost_pct from ME
  ingestionWarnings String[]    @default([])

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([itemId, effectiveDate])
}

model ItemWeekMetric {
  id                  String      @id @default(cuid())

  // Raw data
  quantitySold        Int
  netSales            Float

  // Computed metrics
  avgPrice            Float
  unitFoodCost        Float
  unitCostBase        Float?      // Base cost (before modifiers) if available
  unitCostModifiers   Float?      // Modifier cost component if available
  costSource          CostSource  @default(ESTIMATE)
  unitMargin          Float
  totalMargin         Float
  foodCostPct         Float

  // Percentile ranks (0-100)
  popularityPercentile Float
  marginPercentile     Float
  profitPercentile     Float

  // Classification
  quadrant            Quadrant

  // Recommendation
  recommendedAction   RecommendedAction
  suggestedPrice      Float?
  priceChangeAmount   Float?
  priceChangePct      Float?
  confidence          Confidence
  explanation         String[]

  item                Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId              String

  week                Week      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId              String

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@unique([itemId, weekId])
}

enum Quadrant {
  STAR
  PLOWHORSE
  PUZZLE
  DOG
}

enum RecommendedAction {
  KEEP
  PROMOTE
  REPRICE
  REPOSITION
  REWORK
  REMOVE
}

enum Confidence {
  HIGH
  MEDIUM
  LOW
}

model Report {
  id            String    @id @default(cuid())

  // Summary data (JSON for flexibility)
  summary       Json?

  // Status
  generatedAt   DateTime  @default(now())
  emailSentAt   DateTime?

  week          Week      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId        String    @unique

  emailLogs     EmailLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Email audit log for compliance and tracking
model EmailLog {
  id            String      @id @default(cuid())

  report        Report      @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId      String

  accountId     String      // Account that owns the report
  sentBy        String      // userId who triggered send
  recipients    String[]    // array of email addresses
  subject       String

  status        EmailStatus @default(PENDING)
  messageId     String?     // from Resend for tracking
  errorMessage  String?

  sentAt        DateTime    @default(now())

  @@index([accountId, sentAt])
  @@index([reportId, sentAt])
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
  BOUNCED
}

// Weekly aggregate snapshot for WoW comparison
model WeekSnapshot {
  id            String    @id @default(cuid())

  // Week identifier
  weekStart     DateTime
  weekEnd       DateTime

  // Aggregate KPIs
  revenue       Float     // Total net sales
  grossMargin   Float     // Total margin (sum of item margins)
  itemsSold     Int       // Total quantity sold
  marginPct     Float     // grossMargin / revenue * 100

  // Optional category breakdown (JSON)
  categoryBreakdown Json?

  location      Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId    String

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([locationId, weekStart, weekEnd])
  @@index([locationId, weekStart])
}

// ============================================================================
// AirTip Models - Tip Automation Tool
// ============================================================================

// Multi-tenant organization for AirTip (separate from Menu Autopilot Account)
model TipOrganization {
  id        String   @id @default(cuid())
  name      String

  locations TipLocation[]
  users     TipUser[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Restaurant location for tip management
model TipLocation {
  id        String   @id @default(cuid())
  name      String
  address   String?
  timezone  String   @default("America/New_York")

  organization   TipOrganization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String

  staff     TipStaff[]
  shifts    Shift[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// AirTip user authentication (separate from Menu Autopilot)
model TipUser {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  role          TipUserRole @default(SERVER)

  organization   TipOrganization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String

  // Link to staff profile (if this user is also a staff member)
  staffProfile  TipStaff?  @relation("UserStaffProfile")
  staffId       String?    @unique

  // Sessions for auth
  sessions      TipSession[]

  // Audit trail
  auditLogs     TipAuditLog[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([organizationId])
}

model TipSession {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime

  user      TipUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  createdAt DateTime @default(now())
}

enum TipUserRole {
  ADMIN       // Can manage org, locations, staff, view all
  MANAGER     // Can manage shifts, reconcile, close shifts
  SERVER      // Can only view/submit own allocations
}

// Staff member at a location (may or may not have a TipUser login)
model TipStaff {
  id        String   @id @default(cuid())
  name      String
  roleType  StaffRoleType @default(SERVER)
  isActive  Boolean  @default(true)

  location   TipLocation @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId String

  // Optional link to user account
  user      TipUser? @relation("UserStaffProfile", fields: [userId], references: [id])
  userId    String?  @unique

  // Shift entries where this staff was working
  shiftEntries   ShiftEntry[]

  // Allocations received from other servers
  allocationsReceived TipAllocation[] @relation("AllocationRecipient")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([locationId, name])
  @@index([locationId, isActive])
}

enum StaffRoleType {
  SERVER
  BARTENDER
  BUSSER
  RUNNER
  HOST
  BARBACK
  EXPEDITOR
  KITCHEN     // BOH
  MANAGER_FOH
  OTHER
}

// A shift record (e.g., Lunch on Jan 5, 2026)
model Shift {
  id          String      @id @default(cuid())
  shiftDate   DateTime    @db.Date
  shiftType   ShiftType   @default(DINNER)
  status      ShiftStatus @default(OPEN)

  // Totals from Toast (for reconciliation)
  toastTotalCCTips   Float?   // Total CC tips from Toast report
  toastTotalSales    Float?   // Total sales from Toast report
  toastTotalChecks   Int?     // Total checks from Toast report

  // Computed totals (sum of entries)
  totalCCTips        Float    @default(0)
  totalCashTips      Float    @default(0)
  totalSales         Float    @default(0)
  totalAllocated     Float    @default(0)

  // Manager who closed the shift
  closedBy           String?
  closedAt           DateTime?
  closeNotes         String?

  location    TipLocation @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId  String

  entries     ShiftEntry[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([locationId, shiftDate, shiftType])
  @@index([locationId, status])
}

enum ShiftType {
  BREAKFAST
  BRUNCH
  LUNCH
  DINNER
  LATE_NIGHT
  ALL_DAY
}

enum ShiftStatus {
  OPEN        // Shift created, accepting entries
  IN_PROGRESS // Entries submitted, awaiting reconciliation
  CLOSED      // Manager closed, finalized
  REOPENED    // Admin reopened for correction
}

// Per-server data for a shift
model ShiftEntry {
  id            String   @id @default(cuid())

  // Server info
  serverName    String   // Denormalized for CSV import flexibility

  // From Toast / CSV upload
  grossSales    Float    @default(0)
  ccTips        Float    @default(0)
  cashTips      Float    @default(0)
  checkCount    Int?
  declaredTips  Float?   // If tracked separately

  // Computed
  totalTips     Float    @default(0)  // ccTips + cashTips
  requiredTipOut Float   @default(0)  // Calculated based on rules (future)
  actualTipOut  Float    @default(0)  // Sum of allocations
  netTips       Float    @default(0)  // totalTips - actualTipOut

  // Submission status
  status        EntryStatus @default(PENDING)
  submittedAt   DateTime?
  submittedBy   String?     // Could be server or manager on their behalf

  shift         Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  shiftId       String

  // Optional link to staff record
  staff         TipStaff? @relation(fields: [staffId], references: [id])
  staffId       String?

  // Allocations from this server to recipients
  allocations   TipAllocation[] @relation("AllocationSource")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([shiftId, serverName])
  @@index([shiftId, status])
}

enum EntryStatus {
  PENDING     // Not yet submitted
  SUBMITTED   // Server submitted allocations
  APPROVED    // Manager approved
  ADJUSTED    // Manager made adjustments
}

// Individual tip allocation from server to recipient
model TipAllocation {
  id             String   @id @default(cuid())

  amount         Float    // Dollar amount allocated
  recipientName  String   // Name of recipient (for display/matching)

  // Source: the server giving the tip-out
  entry          ShiftEntry @relation("AllocationSource", fields: [entryId], references: [id], onDelete: Cascade)
  entryId        String

  // Recipient: linked staff member (optional - for reconciliation)
  recipientStaff TipStaff?  @relation("AllocationRecipient", fields: [recipientStaffId], references: [id])
  recipientStaffId String?

  // Optional notes
  notes          String?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([entryId])
  @@index([recipientStaffId])
}

// Immutable audit log for compliance
model TipAuditLog {
  id          String   @id @default(cuid())
  action      TipAuditAction
  entityType  String   // "Shift", "ShiftEntry", "TipAllocation", etc.
  entityId    String
  details     Json?    // Additional context

  user        TipUser? @relation(fields: [userId], references: [id])
  userId      String?

  ipAddress   String?
  userAgent   String?

  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId, createdAt])
}

enum TipAuditAction {
  CREATE
  UPDATE
  DELETE
  SUBMIT
  APPROVE
  CLOSE
  REOPEN
  OVERRIDE
  LOGIN
  LOGOUT
}
