generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      AuthAccount[]
  sessions      Session[]

  // App relations - owned account
  ownedAccount  Account?  @relation("AccountOwner")

  // Member of account
  accountId     String?
  memberOf      Account?  @relation("AccountMembers", fields: [accountId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model AuthAccount {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Business models
model Account {
  id                    String    @id @default(cuid())
  name                  String

  // Stripe
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionTier      SubscriptionTier @default(NONE)

  // Settings
  targetFoodCostPct     Float     @default(30)
  minQtyThreshold       Int       @default(10)
  popularityThreshold   Int       @default(60)
  marginThreshold       Int       @default(60)
  allowPremiumPricing   Boolean   @default(false)

  // Email schedule settings
  emailScheduleEnabled  Boolean   @default(true)
  emailScheduleDay      Int       @default(1)  // 1=Monday, 7=Sunday
  emailScheduleHour     Int       @default(14) // 24h format, 14=2pm

  // Column mappings (JSON)
  columnMappings        Json?

  owner                 User?     @relation("AccountOwner", fields: [ownerId], references: [id])
  ownerId               String?   @unique
  members               User[]    @relation("AccountMembers")
  locations             Location[]

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

enum SubscriptionTier {
  NONE
  SOLO
  TEAM
  GROUP
}

enum Channel {
  BAR_KITCHEN
  FULL_SERVICE
  FAST_CASUAL
  CAFE
  BREWERY
  OTHER
}

model Location {
  id                    String    @id @default(cuid())
  name                  String
  address               String?
  channel               Channel   @default(BAR_KITCHEN)

  // Channel-derived settings (can be customized per location)
  targetFoodCostPct     Float     @default(30)
  popularityThresholdPct Float    @default(60)
  marginThresholdPct    Float     @default(60)
  confidenceQtyHigh     Int       @default(20)
  confidenceQtyMedium   Int       @default(10)
  priceIncreaseMaxPct   Float     @default(0.08)
  priceIncreaseMaxAbs   Float     @default(2.00)
  allowPremiumCross85th Boolean   @default(false)

  account     Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId   String

  items       Item[]
  uploads     Upload[]
  weeks       Week[]
  snapshots   WeekSnapshot[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Upload {
  id            String      @id @default(cuid())
  filename      String
  fileType      UploadType
  rowCount      Int
  status        UploadStatus @default(PENDING)
  errorMessage  String?

  // Column mapping used for this upload
  columnMapping Json?

  location      Location    @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId    String

  week          Week?       @relation(fields: [weekId], references: [id])
  weekId        String?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum UploadType {
  PERFORMANCE
  COSTS
  MARGINEDGE_MENU_ANALYSIS
}

enum UploadStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Week {
  id          String    @id @default(cuid())
  weekStart   DateTime
  weekEnd     DateTime

  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId  String

  uploads     Upload[]
  metrics     ItemWeekMetric[]
  report      Report?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([locationId, weekStart, weekEnd])
}

model Item {
  id          String    @id @default(cuid())
  name        String
  category    String?
  isAnchor    Boolean   @default(false)

  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId  String

  costOverrides CostOverride[]
  weekMetrics   ItemWeekMetric[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([locationId, name])
}

enum CostSource {
  MANUAL
  MARGINEDGE
  ESTIMATE
}

model CostOverride {
  id                String      @id @default(cuid())
  unitFoodCost      Float       // Total unit cost (base + modifiers) - PRIMARY
  unitCostBase      Float?      // Base recipe cost (avg_cost_base from ME)
  unitCostModifiers Float?      // Modifier cost per unit (modifier_cost / items_sold)
  source            CostSource  @default(MANUAL)
  effectiveDate     DateTime    @default(now())

  item              Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId            String

  // Full ME data for audit/debugging
  meItemsSold       Int?        // items_sold from ME (for mismatch detection)
  meRevenue         Float?      // total_revenue from ME
  meTotalCost       Float?      // total_cost from ME (if available)
  meTheoreticalPct  Float?      // theoretical_cost_pct from ME
  ingestionWarnings String[]    @default([])

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([itemId, effectiveDate])
}

model ItemWeekMetric {
  id                  String      @id @default(cuid())

  // Raw data
  quantitySold        Int
  netSales            Float

  // Computed metrics
  avgPrice            Float
  unitFoodCost        Float
  unitCostBase        Float?      // Base cost (before modifiers) if available
  unitCostModifiers   Float?      // Modifier cost component if available
  costSource          CostSource  @default(ESTIMATE)
  unitMargin          Float
  totalMargin         Float
  foodCostPct         Float

  // Percentile ranks (0-100)
  popularityPercentile Float
  marginPercentile     Float
  profitPercentile     Float

  // Classification
  quadrant            Quadrant

  // Recommendation
  recommendedAction   RecommendedAction
  suggestedPrice      Float?
  priceChangeAmount   Float?
  priceChangePct      Float?
  confidence          Confidence
  explanation         String[]

  item                Item      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId              String

  week                Week      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId              String

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@unique([itemId, weekId])
}

enum Quadrant {
  STAR
  PLOWHORSE
  PUZZLE
  DOG
}

enum RecommendedAction {
  KEEP
  PROMOTE
  REPRICE
  REPOSITION
  REWORK
  REMOVE
}

enum Confidence {
  HIGH
  MEDIUM
  LOW
}

model Report {
  id            String    @id @default(cuid())

  // Summary data (JSON for flexibility)
  summary       Json?

  // Status
  generatedAt   DateTime  @default(now())
  emailSentAt   DateTime?

  week          Week      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId        String    @unique

  emailLogs     EmailLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Email audit log for compliance and tracking
model EmailLog {
  id            String      @id @default(cuid())

  report        Report      @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId      String

  accountId     String      // Account that owns the report
  sentBy        String      // userId who triggered send
  recipients    String[]    // array of email addresses
  subject       String

  status        EmailStatus @default(PENDING)
  messageId     String?     // from Resend for tracking
  errorMessage  String?

  sentAt        DateTime    @default(now())

  @@index([accountId, sentAt])
  @@index([reportId, sentAt])
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
  BOUNCED
}

// Weekly aggregate snapshot for WoW comparison
model WeekSnapshot {
  id            String    @id @default(cuid())

  // Week identifier
  weekStart     DateTime
  weekEnd       DateTime

  // Aggregate KPIs
  revenue       Float     // Total net sales
  grossMargin   Float     // Total margin (sum of item margins)
  itemsSold     Int       // Total quantity sold
  marginPct     Float     // grossMargin / revenue * 100

  // Optional category breakdown (JSON)
  categoryBreakdown Json?

  location      Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId    String

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([locationId, weekStart, weekEnd])
  @@index([locationId, weekStart])
}

// ============================================================================
// AirTip Models - Tip Automation Tool
// ============================================================================

// Multi-tenant organization for AirTip (separate from Menu Autopilot Account)
model TipOrganization {
  id        String   @id @default(cuid())
  name      String

  // Feature settings (configured during setup)
  usesCashTips Boolean @default(true)

  locations  TipLocation[]
  users      TipUser[]
  payPeriods PayPeriod[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Restaurant location for tip management
model TipLocation {
  id        String   @id @default(cuid())
  name      String
  address   String?
  timezone  String   @default("America/New_York")

  organization   TipOrganization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String

  staff          TipStaff[]
  staffLocations StaffLocation[] @relation("StaffLocations")
  coverPageScans CoverPageScan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Two-week pay period for tip aggregation
model PayPeriod {
  id        String          @id @default(cuid())
  startDate DateTime        @db.Date
  endDate   DateTime        @db.Date
  status    PayPeriodStatus @default(OPEN)

  // Finalization
  finalizedAt DateTime?
  finalizedBy String?

  // Export tracking
  exportedAt  DateTime?
  exportedBy  String?
  exportNotes String?

  organization   TipOrganization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String

  // All cover page scans in this period
  coverPageScans CoverPageScan[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, startDate, endDate])
  @@index([organizationId, status])
}

enum PayPeriodStatus {
  OPEN       // Accepting new scans
  REVIEW     // Manager reviewing before finalize
  FINALIZED  // Locked, ready for export
  EXPORTED   // Uploaded to Toast
}

// Scanned cover page from a server's receipt packet
model CoverPageScan {
  id        String        @id @default(cuid())
  imageUrl  String        // S3/storage URL for the uploaded image
  status    ScanStatus    @default(PENDING)

  // Extracted data from OCR
  serverName     String?   // Extracted server name
  shiftDate      DateTime? @db.Date // Extracted date
  grossTips      Float?    // Total tips before deductions
  cashOwed       Float?    // Cash adjustment (if any)
  netBeforeTipout Float?   // After cash adjustment, before tip-outs
  netTips        Float?    // Final net tips (what server keeps)

  // Raw OCR output for debugging/audit
  ocrRawText     String?   // Full extracted text
  ocrConfidence  Float?    // OCR confidence score (0-1)

  // Manual corrections (if manager edited)
  wasManuallyEdited Boolean @default(false)
  editNotes         String?

  // Links
  location   TipLocation @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId String

  payPeriod   PayPeriod? @relation(fields: [payPeriodId], references: [id])
  payPeriodId String?

  // Linked staff member (after name matching)
  staff   TipStaff? @relation(fields: [staffId], references: [id])
  staffId String?

  // Tip-outs extracted from this cover page
  tipOuts TipOut[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([locationId, shiftDate])
  @@index([payPeriodId])
  @@index([staffId])
}

enum ScanStatus {
  PENDING      // Uploaded, awaiting OCR
  PROCESSING   // OCR in progress
  REVIEW       // OCR complete, needs manager review
  CONFIRMED    // Manager confirmed data is correct
  ERROR        // OCR failed or data couldn't be extracted
}

// Tip-out from a server to a support staff member
model TipOut {
  id            String   @id @default(cuid())
  recipientName String   // Name as written on cover page
  amount        Float    // Dollar amount

  // Source cover page
  coverPageScan   CoverPageScan @relation(fields: [coverPageScanId], references: [id], onDelete: Cascade)
  coverPageScanId String

  // Linked recipient (after name matching)
  recipientStaff   TipStaff? @relation(fields: [recipientStaffId], references: [id])
  recipientStaffId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([coverPageScanId])
  @@index([recipientStaffId])
}

// AirTip user authentication (separate from Menu Autopilot)
model TipUser {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  role          TipUserRole @default(MANAGER)

  organization   TipOrganization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String

  // Link to staff profile (if this user is also a staff member)
  staffProfile  TipStaff?  @relation("UserStaffProfile")
  staffId       String?    @unique

  // Sessions for auth
  sessions      TipSession[]

  // Audit trail
  auditLogs     TipAuditLog[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([organizationId])
}

model TipSession {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime

  user      TipUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  createdAt DateTime @default(now())
}

enum TipUserRole {
  ADMIN       // Can manage org, locations, staff, view all
  MANAGER     // Can scan receipts, review, finalize periods
}

// Staff member at a location (may or may not have a TipUser login)
model TipStaff {
  id        String   @id @default(cuid())
  name      String
  roleType  StaffRoleType @default(SERVER)
  isActive  Boolean  @default(true)

  // Primary/default location (for backwards compatibility)
  location   TipLocation @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId String

  // All locations this staff member can work at
  locations  StaffLocation[]

  // Optional link to user account
  user      TipUser? @relation("UserStaffProfile", fields: [userId], references: [id])
  userId    String?  @unique

  // Cover page scans where this staff was the server
  coverPageScans CoverPageScan[]

  // Tip-outs received from other servers
  tipOutsReceived TipOut[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([locationId, name])
  @@index([locationId, isActive])
}

// Join table for staff working at multiple locations
model StaffLocation {
  id         String      @id @default(cuid())
  staff      TipStaff    @relation(fields: [staffId], references: [id], onDelete: Cascade)
  staffId    String
  location   TipLocation @relation("StaffLocations", fields: [locationId], references: [id], onDelete: Cascade)
  locationId String
  createdAt  DateTime    @default(now())

  @@unique([staffId, locationId])
  @@index([locationId])
}

enum StaffRoleType {
  SERVER
  BARTENDER
  BUSSER
  RUNNER
  HOST
  BARBACK
  EXPEDITOR
  KITCHEN     // BOH
  MANAGER_FOH
  OTHER
}

// Immutable audit log for compliance
model TipAuditLog {
  id          String   @id @default(cuid())
  action      TipAuditAction
  entityType  String   // "PayPeriod", "CoverPageScan", "TipOut", etc.
  entityId    String
  details     Json?    // Additional context

  user        TipUser? @relation(fields: [userId], references: [id])
  userId      String?

  ipAddress   String?
  userAgent   String?

  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId, createdAt])
}

enum TipAuditAction {
  CREATE
  UPDATE
  DELETE
  SCAN_UPLOAD    // Cover page uploaded
  SCAN_CONFIRM   // Manager confirmed OCR data
  SCAN_EDIT      // Manager edited OCR data
  PERIOD_FINALIZE // Pay period finalized
  PERIOD_EXPORT   // Pay period exported to Toast
  PERIOD_REOPEN   // Pay period reopened for edits
  LOGIN
  LOGOUT
}
